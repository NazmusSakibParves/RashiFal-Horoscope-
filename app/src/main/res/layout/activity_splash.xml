<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/header_img"
    tools:context=".SplashActivity">
    <ImageView
        android:layout_width="200dp"
        android:src="@drawable/aries_icon"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:id="@+id/image"
        android:layout_height="250dp" />

    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/homeimgbangla"
        android:id="@+id/imageBangla"
        android:layout_height="80dp" />


<ImageView
    android:layout_width="match_parent"
    android:src="@drawable/homeimg"
    android:id="@+id/textView5"
    android:layout_below="@+id/imageBangla"
    android:layout_height="80dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/image"
        android:background="@drawable/roundcorner_ash_big"
        android:orientation="horizontal">

        <TableRow
            android:id="@+id/tb_bangla"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="bangla"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="বাংলা"
                android:textColor="#18A8FF"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray">

        </View>

        <TableRow
            android:id="@+id/tb_english"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="english"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="English"
                android:textColor="#18A8FF"
                android:textSize="30sp"
                android:textStyle="bold" />
        </TableRow>

    </LinearLayout>
</RelativeLayout>

